<% include ../partials/header.ejs %>
  <!--MAIN CONTENT  -->
  <div class="body_container">
    <div class="row">
      <div class="col-md-offset-3 col-md-5">
        <h1><% = title %></h1>
        <form class="form" method ="post">  
            <div class="form-group">
                <label for="ContactNameTextField">Contact Name</label>
                <input type="text" class="form-control" id="ContactNameTextField"
                placeholder="Contact Name" name="contactName" value="<%= contacts.contactName %>" required>
            </div>
            <div class="form-group">
                <label for="ContactNumbeerTextField">Contact Number</label>
                <input type="text" class="form-control" id="ContactNumberTextField"
                placeholder="Contact Number" name="contactNumber" value="<%= contacts.contactNumber %>" required>
            </div>
            <div class="form-group">
                <label for="ContactEmailTextField">Email Address</label>
                <input type="email" class="form-control" id="ContactEmailTextField"
                placeholder="Email Address" name="emailAddress" value="<%= contacts.emailAddress %>" required>
            </div>
            <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i>Submit</button>
            <a href="/business" class="btn btn-warning"><i class="fa fa-undo"></i>Cancel</a>
        </form>
      </div>
    </div>
  </div>

  <% include ../partials/footer.ejs%>