<% include ../partials/header.ejs %>

  <!--MAIN CONTENT  -->
  <div class="body_container">
    <div class="row">
      <div class="col-md-offset-3 col-md-5">
        <h1 style="font-size:100px;text-align: center">
            <%= title %>
        </h1>
        <br>
        
        <table>
            <tr class="row">
                <td class="col">Contact Name</td>
                <td class="col">Contact Number</td>
                <td class="col">Email Address</td>
                <td class="col"></td>
                <td class="col"></td>
            </tr>
            <% for (let count = 0; count < contacts.length; count++) { %>
            <tr>
                <td class="text-center"><%= contacts[count].contactName %></td>
                <td class="text-center"><%= contacts[count].contactNumber %></td>
                <td class="text-center"><%= contacts[count].emailAddress %></td>
                <td class="text-center">
                    <a href="/contacts/<%=contacts[count]._id %>" class="btn btn-primary">
                    <i class="fa fa-pencil-square-o"></i>Edit</a>
                </td>
                <td class="text-center">
                    <a href="/contacts/<%=contacts[count]._id %>" class="btn btn-primary">
                    <i class="fa fa-trash-o"></i>Delete</a>
                </td>
            </tr>
            <% } %>
        </table>
     </div>
   </div>
  </div>

  <% include ../partials/footer.ejs%>